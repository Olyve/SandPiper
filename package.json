{
  "name": "sandpiper",
  "version": "1.0.0",
  "description": "An app that helps you migrate your playlists from one music service to another.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "remote_start": "build_frontend && yarn start",
    "build_frontend": "cd sandpiper-frontend && yarn build && cd ..",
    "test": "nyc mocha --timeout 120000 --exit",
    "remote_test": "nyc --reporter=lcovonly mocha --timeout 120000 --exit",
    "report": "nyc report --reporter=html && open -a 'Google Chrome' coverage/index.html"
  },
  "repository": "git@github.com:sgalizia/SandPiper.git",
  "author": "Sam Galizia <samgalizia@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "jsonwebtoken": "^8.1.1",
    "mongoose": "^5.0.6",
    "morgan": "^1.9.0",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5",
    "retry": "^0.10.1",
    "validator": "^9.4.1",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "jshint": "^2.9.5",
    "mocha": "^5.0.1",
    "mockgoose": "^7.3.5",
    "nyc": "^11.4.1"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 70,
    "statements": 70,
    "functions": 70,
    "branches": 70,
    "cache": true
  }
}
